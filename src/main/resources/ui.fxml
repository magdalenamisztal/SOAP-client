<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.desktop.DesktopController">

    <Text text="Aplikacja Desktopowa" />
    <Button onAction="#onManufacturerButtonClick" text="Pobierz liczbę laptopów wg producenta" />
    <VBox alignment="CENTER" spacing="10">
        <Label text="Podaj nazwę producenta:" />
        <TextField fx:id="manufacturerTextField" />
        <Button text="Pobierz informacje" />
    </VBox>
    <Button onAction="#onScreenRatioButtonClick" text="Pobierz liczbę laptopów wg proporcji ekranu" />
    <VBox alignment="CENTER" spacing="10">
        <Label text="Podaj proporcje ekranu:" />
        <TextField fx:id="resolutionTextField" />
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <VBox spacing="10">
            <ComboBox fx:id="comboBox1" layoutX="15.0" layoutY="33.0" prefWidth="190.0" promptText="choose" />
            <TextField fx:id="value1TextField"/>
        </VBox>
        <VBox spacing="10">
            <ComboBox fx:id="comboBox2" layoutX="15.0" layoutY="33.0" prefWidth="190.0" promptText="choose" />
            <TextField fx:id="value2TextField"/>
        </VBox>
        <VBox spacing="10">
            <ComboBox fx:id="comboBox3" layoutX="15.0" layoutY="33.0" prefWidth="190.0" promptText="choose" />
            <TextField fx:id="value3TextField"/>
        </VBox>
        <VBox spacing="10">
            <ComboBox fx:id="comboBox4" layoutX="15.0" layoutY="33.0" prefWidth="190.0" promptText="choose" />
            <TextField fx:id="value4TextField"/>
        </VBox>
        <VBox spacing="10">
            <ComboBox fx:id="comboBox5" layoutX="15.0" layoutY="33.0" prefWidth="190.0" promptText="choose" />
            <TextField fx:id="value5TextField"/>
        </VBox>
    </HBox>
    <Button onAction="#onExportButtonClick" text="Eksportuj dane do pliku XML" />


</VBox>
